<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <!-- Kolom kiri: Greeting -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/greeting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:textSize="16sp"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siyam Ahamed!"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Kolom kanan: Ikon -->
            <LinearLayout
                android:id="@+id/header_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:background="@drawable/bg_header_icons">

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:padding="4dp">
                    <ImageView
                        android:id="@+id/btnCart"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cart"
                        android:contentDescription="Notification" />
                    <TextView
                        android:id="@+id/badgeCartCount"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="end|top"
                        android:translationX="4dp"
                        android:translationY="-4dp"
                        android:background="@drawable/bg_badge_circle"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:minHeight="14dp"
                        android:minWidth="14dp"
                        android:text="0"/>
                </FrameLayout>

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_avatar_default"
                    android:background="@drawable/bg_avatar_circle"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layoutHomeRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Banner Section -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <!-- Welcome Text -->
<!--            <TextView-->
<!--                android:id="@+id/tvWelcome"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="16dp"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:textSize="14sp"-->
<!--                android:textStyle="normal" />-->

            <!-- Categories Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketegori"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Best Sellers Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produk Terlaris"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBestSellers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
